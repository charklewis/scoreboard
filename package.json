{
  "name": "scoreboard",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "start": "remix-serve ./build/index.js",
    "test": "vitest",
    "pw:open": "playwright test --ui",
    "pw:run": "playwright test",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:repo": "bun lint -- --config .eslintrc.repo.cjs",
    "typecheck": "tsc --skipLibCheck",
    "db:migrate": "drizzle-kit generate:mysql --schema=./app/database/schema.ts",
    "db:push": "drizzle-kit push:mysql --config ./drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@nextui-org/react": "^2.2.9",
    "@planetscale/database": "^1.16.0",
    "@react-aria/tooltip": "^3.7.2",
    "@remix-run/node": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "@remix-run/serve": "^2.7.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@vercel/analytics": "^1.2.2",
    "clsx": "^2.1.0",
    "cross-fetch": "^4.0.0",
    "drizzle-orm": "^0.29.4",
    "framer-motion": "^11.0.6",
    "hashids": "^2.3.0",
    "isbot": "^5.1.0",
    "mysql2": "^3.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-otp-input": "^3.1.1",
    "react-stately": "^3.30.1",
    "remix-auth": "^3.6.0",
    "remix-utils": "^7.5.0",
    "stytch": "^10.5.0",
    "web-vitals": "^3.5.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@google-cloud/local-auth": "^3.0.1",
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.41.2",
    "@remix-run/dev": "^2.7.2",
    "@remix-run/eslint-config": "^2.7.2",
    "@remix-run/testing": "^2.7.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^18.19.18",
    "@types/promise-retry": "^1.1.6",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.3.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "googleapis": "^133.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "promise-retry": "^2.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  }
}
