{
  "name": "scoreboard",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "remix build",
    "dev": "remix dev --manual",
    "start": "remix-serve ./build/index.js",
    "test": "vitest",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:repo": "bun lint -- --config .eslintrc.repo.cjs",
    "typecheck": "tsc",
    "db:migrate": "drizzle-kit generate:mysql --schema=./app/database/schema.ts",
    "db:push": "drizzle-kit push:mysql --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@planetscale/database": "^1.11.0",
    "@react-aria/link": "^3.6.0",
    "@react-aria/tooltip": "^3.6.3",
    "@remix-run/node": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "@remix-run/serve": "^2.0.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@vercel/analytics": "^1.1.0",
    "classnames": "^2.3.2",
    "cross-fetch": "^4.0.0",
    "drizzle-orm": "^0.28.6",
    "isbot": "^3.7.0",
    "mysql2": "^3.6.1",
    "react": "^18.2.0",
    "react-aria-components": "^1.0.0-beta.1",
    "react-dom": "^18.2.0",
    "react-otp-input": "^3.1.0",
    "react-stately": "^3.27.0",
    "remix-auth": "^3.6.0",
    "remix-utils": "^7.0.2",
    "stytch": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@remix-run/dev": "^2.0.1",
    "@remix-run/eslint-config": "^2.0.1",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/web": "^0.0.116",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "bun-types": "^1.0.6",
    "cypress": "^13.3.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-prefer-let": "^3.0.1",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "resize-observer-polyfill": "^1.5.1",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": "18"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "bun run lint:repo -- --fix"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  }
}
