{
  "name": "scoreboard",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "start": "remix-serve ./build/index.js",
    "test": "vitest",
    "pw:open": "playwright test --ui",
    "pw:run": "playwright test",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:repo": "bun lint -- --config .eslintrc.repo.cjs",
    "typecheck": "tsc --skipLibCheck",
    "db:migrate": "drizzle-kit generate:mysql --schema=./app/database/schema.ts",
    "db:push": "drizzle-kit push:mysql --config ./drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^7.0.2",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@planetscale/database": "^1.11.0",
    "@react-aria/tooltip": "^3.6.4",
    "@remix-run/node": "^2.2.0",
    "@remix-run/react": "^2.2.0",
    "@remix-run/serve": "^2.2.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@vercel/analytics": "^1.1.1",
    "clsx": "^2.0.0",
    "cross-fetch": "^4.0.0",
    "drizzle-orm": "^0.28.6",
    "hashids": "^2.3.0",
    "isbot": "^3.7.0",
    "mysql2": "^3.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-otp-input": "^3.1.0",
    "react-stately": "^3.27.1",
    "remix-auth": "^3.6.0",
    "remix-utils": "^7.1.0",
    "stytch": "^9.0.6",
    "web-vitals": "^3.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@google-cloud/local-auth": "^3.0.0",
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.39.0",
    "@remix-run/dev": "^2.2.0",
    "@remix-run/eslint-config": "^2.2.0",
    "@remix-run/testing": "^2.2.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.8.10",
    "@types/promise-retry": "^1.1.5",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/web": "^0.0.117",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "bun-types": "^1.0.8",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.18.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "googleapis": "^128.0.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "promise-retry": "^2.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "tailwindcss": "^3.3.4",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": "18"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  }
}
